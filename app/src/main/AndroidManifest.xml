<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neo.notes360">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notes360">
        <activity android:name=".ui.splashScreen.WelcomeActivity"
            android:theme="@style/WelcomeTheme"
            android:exported="true"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.splashScreen.LaunchActivity"
            android:theme="@style/SplashTheme"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:exported="true"
            android:name=".ui.notedetail.NoteDetailsActivity" />
        <activity
            android:name=".ui.addedit.AddEditActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.Notes360.NoActionBar" />
        <activity
            android:name=".ui.auth.signinsignup.SignInSignUpActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.Notes360.NoActionBar" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.Notes360.NoActionBar">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>